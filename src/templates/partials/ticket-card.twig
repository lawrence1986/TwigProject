{# Ticket Card Partial - Pass ticket object with: id, title, description, status, createdAt #}
<div class="p-6 shadow-lg hover:shadow-xl transition-all bg-white rounded-lg border border-slate-200">
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-lg font-semibold text-slate-900">{{ ticket.title }}</h3>
    <span class="px-3 py-1 rounded-full text-sm font-medium {% if ticket.status == 'open' %}bg-[#22c55e] text-white{% elseif ticket.status == 'in_progress' %}bg-[#f59e0b] text-white{% elseif ticket.status == 'closed' %}bg-[#9ca3af] text-white{% else %}bg-gray-200 text-gray-800{% endif %}">
      {{ ticket.status|replace({'_': ' '})|upper }}
    </span>
  </div>

  <p class="text-gray-600 mb-4 line-clamp-2">{{ ticket.description }}</p>

  <div class="flex items-center justify-between">
    <p class="text-sm text-gray-500">
      Created: {{ ticket.createdAt|date('m/d/Y') }}
    </p>
    <div class="flex gap-2">
      <button
        data-ticket-id="{{ ticket.id }}"
        data-action="edit"
        class="ticket-edit-btn inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-950 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-slate-300 bg-white hover:bg-[#2563eb] hover:text-white hover:border-[#2563eb] h-9 px-3"
      >
        <i data-lucide="pencil" class="w-4 h-4"></i>
      </button>
      <button
        data-ticket-id="{{ ticket.id }}"
        data-action="delete"
        class="ticket-delete-btn inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-950 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-slate-300 bg-white hover:bg-red-500 hover:text-white hover:border-red-500 h-9 px-3"
      >
        <i data-lucide="trash-2" class="w-4 h-4"></i>
      </button>
    </div>
  </div>
</div>
