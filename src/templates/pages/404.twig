{% extends 'layouts/base.twig' %}

{% block title %}404 - Page Not Found{% endblock %}

{% block content %}
  <div class="min-h-screen flex items-center justify-center bg-[#f9fafb] px-4">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-blue-600">404</h1>
      <h2 class="text-3xl font-semibold text-gray-900 mt-4">Page Not Found</h2>
      <p class="text-gray-600 mt-4 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="{{ base_path }}/"
        class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-blue-500 text-white hover:bg-blue-600 h-10 px-6 py-2 transition-colors"
      >
        Go Home
      </a>
    </div>
  </div>
{% endblock %}
